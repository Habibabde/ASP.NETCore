@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<!--<h1>Items View</h1>---->

<div class="container p-3">

    <partial name="_Notifications" />

    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary">Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary"><i class="bi bi-plus-lg"></i> &nbsp Add New Item</a>
        </div>
    </div>
    <!------<table class="table table-bordered table-striped " style="width:100%"> ------->
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Item Name

                </th>

                <th scope="col">
                    Item Price

                </th>
                <th scope="col">
                    Category
                </th>
                <th scope="col">
                  
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" with="40%">
                        @item.Name 
                    </td>

                    <td with="30%">
                        @item.Price
                    </td>
                    <td with="30%">
                        @item.Category.Name
                    </td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        &nbsp

                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            </a >
                       
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 


